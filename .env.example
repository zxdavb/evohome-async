# OpenWeatherMap API Configuration
# Get your API key from: https://openweathermap.org/api
# Copy this file to .env and add your API key
OPENWEATHER_API_KEY=your_api_key_here

# InfluxDB 3 Configuration
# Authentication token for accessing InfluxDB
INFLUXDB3_AUTH_TOKEN=your_influxdb_token_here

# Host address of the InfluxDB server (default: localhost)
INFLUXDB3_HOST=localhost

# Port on which InfluxDB is running (default: 8086)
INFLUXDB3_PORT=8181

# Organization name used for multi-tenant environments (optional)
# INFLUXDB3_ORG=your_org_name

# Default bucket/database to write or query data from
INFLUXDB3_BUCKET=evohome

# Username for authentication if using basic auth (optional)
# INFLUXDB3_USERNAME=your_username

# Password for the specified username (optional)
# INFLUXDB3_PASSWORD=your_password

# Timeout duration for queries in seconds (optional)
# INFLUXDB3_TIMEOUT=30

# Set to true if you want to use SSL for connections (optional, default: false)
# INFLUXDB3_SSL=false

# Legacy variable names (for backward compatibility, deprecated)
# INFLUXDB_TOKEN=your_influxdb_token_here
# INFLUXDB_HOST=localhost
# INFLUXDB_PORT=8181
# INFLUXDB_BUCKET=evohome
# INFLUXDB_URL=http://localhost:8181
